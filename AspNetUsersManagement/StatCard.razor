@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public object Value { get; set; }
    [Parameter] public string BackgroundColor { get; set; } = "bg-primary";
    [Parameter] public string TextColor { get; set; } = "text-white";
    [Parameter] public EventCallback OnClick { get; set; }
}
<div class="col-md-4 col-lg-3 mb-4">
    <div class="card @BackgroundColor @TextColor" style="cursor: pointer;" @onclick="OnClick">
        <div class="card-body">
            <h5 class="card-title"><i class="@Icon me-2"></i>@Title</h5>
            <p class="card-text display-4">@Value</p>
        </div>
    </div>
</div>